#!groovy

properties([
        pipelineTriggers([cron('15 01 * * *')]),
        parameters([
                string(name: 'URL_TO_TEST', defaultValue: 'http://div-cfs-aat.service.core-compute-aat.internal', description: 'The URL you want to run these tests against'),
                string(name: 'SecurityRules',
                        defaultValue: 'https://gist.githubusercontent.com/satyachundur/0f16e35aedd7c939b33f071f5c447125/raw',
                        description: 'The URL you want to run these tests against'),
        ])
    ])

@Library("Infrastructure")

def type = "java"
def product = "div"
def component = "cfs"

withNightlyPipeline(type, product, component) {
    env.TEST_URL = params.URL_TO_TEST
    
    env.Rules = params.SecurityRules
    enableMutationTest()
    enableSecurityScan()
}
